<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardBackgroundColor="@color/white"
    android:layout_width="@dimen/dp_270"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_guidance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/privacy_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_guidance_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_12"
        android:text="1、"
        app:layout_constraintTop_toBottomOf="@+id/iv_guidance" />

    <TextView
        android:id="@+id/tv_guidance_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_12"
        android:text="2、"
        app:layout_constraintTop_toBottomOf="@+id/tv_guidance_one" />

    <TextView
        android:id="@+id/tv_guidance_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_12"
        android:text="3、"
        app:layout_constraintTop_toBottomOf="@+id/tv_guidance_two" />

    <Button
        android:id="@+id/btn_guidance_no"
        app:layout_constraintTop_toBottomOf="@+id/tv_guidance_three"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/selector_guidance_btn_no"
        />

    <Button
        android:id="@+id/btn_guidance_ok"
        app:layout_constraintTop_toBottomOf="@+id/tv_guidance_three"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/selector_guidance_btn_ok"
        />
    
    <View
        app:layout_constraintTop_toBottomOf="@+id/btn_guidance_ok"
        android:background="@color/white"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="@dimen/dp_20"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>